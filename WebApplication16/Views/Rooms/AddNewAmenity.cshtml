@model WebApplication16.Models.AddNewAmenity
@{
    ViewBag.Title = "Add New Amenity";
}

<h3>Add new amenity for the room with room number @Model.Room.RoomNumber</h3>

@using (Html.BeginForm("InsertNewAmenity", "Rooms"))
{
    <div class="form-group">
        @Html.EditorFor(m => m.Amenity, new { @class = "form-control" })
        @Html.HiddenFor(m => m.IdRoom)
    </div>
    <div>
        <button type="submit" class="btn btn-default">Add amenity</button>
    </div>
}
